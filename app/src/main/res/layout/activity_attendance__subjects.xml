<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendance_Subjects"
    android:background="#002147">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="@font/comfortaa_bold"
            android:textStyle="bold"
            android:textColor="@color/white">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/calendar"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/calendar"
                android:background="@drawable/button_style"
                android:fontFamily="monospace"
                android:hint="date"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center">

            </TextView>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_mgt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:text="MGT"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btn_pwp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:text="PWP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/btn_mad"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:text="MAD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/btn_eti"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:text="ETI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/btn_wpb"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:text="WPB"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp">

        </Button>

        <Button
            android:id="@+id/btn_attendance"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/white"
            android:text="See Attendance"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp">

        </Button>


    </LinearLayout>

</ScrollView>